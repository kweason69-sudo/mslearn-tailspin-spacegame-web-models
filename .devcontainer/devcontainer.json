{
  "name": "Space Game Dev Container",
  "image": "mcr.microsoft.com/devcontainers/dotnet:8.0",
  "features": {
    "ghcr.io/devcontainers/features/dotnet:1": {
      "version": "8.0"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/powershell:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-azuretools.vscode-azurefunctions"
      ]
    }
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y curl tar libicu-dev libssl-dev libcurl4 openssl libunwind8 libkrb5-3 && curl -LsS https://aka.ms/install-artifacts-credprovider | bash",
  
  "postStartCommand": "chmod +x .devcontainer/library-scripts/bootstrap.sh && bash .devcontainer/library-scripts/bootstrap.sh && bash .devcontainer/library-scripts/start.sh"
}
